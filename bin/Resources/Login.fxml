<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">

   <children>
   
      <AnchorPane layoutX="-1.0" prefHeight="400.0" prefWidth="451.0">
         <children>
            <ImageView fitHeight="400.0" fitWidth="376.0" layoutY="-1.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </AnchorPane>
      <AnchorPane id="login" layoutX="298.0" prefHeight="400.0" prefWidth="299.0">
         <children>
            <Label id="title" fx:id="title" alignment="CENTER" layoutX="18.0" layoutY="27.0" prefHeight="53.0" prefWidth="176.0" text="Manager Login" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font></Label>
            <Button fx:id="loginbtn" layoutX="33.0" layoutY="254.0" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="31.0" prefWidth="145.0" text="Login" />
            <Button id="home" layoutX="33.0" layoutY="310.0" mnemonicParsing="false" onAction="#onHomeButtonClick" prefHeight="31.0" prefWidth="145.0" text="Home" />
            <TextField id="email" fx:id="inputEmail" layoutX="18.0" layoutY="115.0" prefHeight="31.0" prefWidth="176.0" promptText="Email" />
            <TextField id="password" fx:id="inputPassword" layoutX="18.0" layoutY="184.0" prefHeight="31.0" prefWidth="176.0" promptText="Password" />
         </children>
      </AnchorPane>
   </children>

</HBox>
